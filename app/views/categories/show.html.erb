<h3> Tasks </h3>
<hr>
<br>
<%= link_to "Categories", categories_path %>
<br>
<br>
<div>
Current Category: <%= @category.category_name %> <br>
Details: <%= @category.details %>
</div>

<%= link_to "Edit", edit_category_path(@category) %>
    <%= link_to "Destroy", category_path(@category), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Delete category fo reals?"
                } %>

<% @category_tasks.each do |task|%> 
    <hr>
    <div>
        <p>Task: <%= task.task_name %></p>
        <p>Deadline: <%= task.due_date %></p>
    </div>
    <%= link_to "View Task", category_task_path(@category, task) %>
<% end %>
<hr>
<%= link_to "Create new task", new_category_task_path(@category) %>
