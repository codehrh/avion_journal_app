<h3> Tasks </h3>
<hr>
<br>
<%= link_to "Categories", categories_path %>
<br>
<br>
<div>
Current Category: <%= @category.category_name %> <br>
Details: <%= @category.details %>
</div>
<% @category_tasks.each do |t|%> 
    <div>
        <p>Task: <%= t.task_name %></p>
        <p>Details: <%= t.details %></p>
        <p>Deadline: <%= t.due_date %></p>
    </div>
    <%= link_to "Edit", edit_category_path(@category) %>
    <%= link_to "Destroy", category_path(@category), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Delete fo reals?"
                } %>
    <br>
<% end %>
