
<% if user_signed_in? %>
    <h4> Welcome, <%= current_user.email %>! </h4>
<% else %>
    <h4> You are not signed in. </h4>
<% end %>
<% if user_signed_in? %>
  <%= button_to 'Logout', destroy_user_session_path, method: :delete %>
<% end %>
<h3> Categories </h3>
<hr>
<br>
<%= link_to "Create New Category", new_category_path %>
<br>
<% @categories.each do |c|%>
    <ul>
        <li>
        <p><%= c.category_name %></p>
        <p><%= link_to "View Category", category_path(c) %></p>
        </li>
    </ul>
<% end %>
<br>
<hr>

<div>
    <h4>Tasks due today:</h4>
</div>

<div>
<% if @today.present? %>
    <% @today.each do |task| %>
        <ul>
            <li>
                <p> Task: <%= task.task_name %> </p> 
                <p> Details: <%= task.details %> </p> 
                <p> Due Date: <%= task.due_date %> </p> 
                <br>
            </li>
        </ul>
    <% end %>
<% else %>
    <li>No Tasks due today.</li>
<% end %>
</div>