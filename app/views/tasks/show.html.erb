<h3>Task Details</h3>

<div>
    <p>Task: <%= @task.task_name %></p>
    <p>Details: <%= @task.details %></p>
    <p>Deadline: <%= @task.due_date %></p>
    <%= link_to "Edit", edit_category_task_path(@category, @task) %>
    <%= link_to "Delete Task", category_task_path(@category, @task), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Delete Task fo reals?"
                } %>
</div>