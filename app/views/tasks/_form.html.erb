<%= form_with model: [ @category, @task ] do |form| %>
    <p>
        <%= form.label :task_name %><br>
        <%= form.text_field :task_name %>
    </p>
    <p>
        <%= form.label :details %><br>
        <%= form.text_field :details %>
    </p>
    <p>
        <%= form.label :due_date %><br>
        <%= form.date_field :due_date %>
    </p>
    <p>
        <%= form.submit %>
    </p>
<% end %>